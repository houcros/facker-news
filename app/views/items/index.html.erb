<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Deleted</th>
      <th>Post_Type</th>
      <th>By</th>
      <th>Content</th>
      <th>Dead</th>
      <th>Parent</th>
      <th>Kids</th>
      <th>Url</th>
      <th>Score</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.deleted %></td>
        <td><%= item.post_type %></td>
        <td><%= item.by %></td>
        <td><%= item.content %></td>
        <td><%= item.dead %></td>
        <td><%= item.parent %></td>
        <td><%= item.kids %></td>
        <td><%= item.url %></td>
        <td><%= item.score %></td>
        <td><%= item.title %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
