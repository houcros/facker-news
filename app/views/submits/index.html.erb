<table>
<%= link_to 'New Submit', new_submit_path %><br><br>
  <tbody>
    <% @submits.each do |submit| %>
      <tr>
        <td class='itemTitle'><%= link_to submit.title, submit%>  (<%= submit.url %>)</td>
      </tr>
      <tr>
        <td class='itemInfo'><%= submit.score %> points by <%= User.find(submit.user_id).name %> <%= time_ago_in_words(submit.created_at) %> ago | <%= submit.num_comments %> comments     </td>
        <td><%= link_to 'Edit', edit_submit_path(submit) %></td>
        <td><%= link_to 'Destroy', submit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


